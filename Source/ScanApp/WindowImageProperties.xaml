<Window x:Class="ScanApp.WindowImageProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Properties" 
        Height="300" 
        Width="300"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <ListView Grid.Row="0" Margin="10" ItemsSource="{Binding PropertyList}">
    </ListView>
    <Button Grid.Row="1" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" Content="Close" IsCancel="True"/>
  </Grid>
</Window>
